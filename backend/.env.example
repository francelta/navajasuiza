# Django
SECRET_KEY=navajasuiza-cambia-esta-clave-en-produccion
DEBUG=True

# ============================================
# SMTP — Correo Corporativo (Dinahosting)
# ============================================
EMAIL_HOST=mail.acristalia.com
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_USE_TLS=False
EMAIL_HOST_USER=no-reply@acristalia.com
EMAIL_HOST_PASSWORD=tu_contraseña_smtp_aqui
DEFAULT_FROM_EMAIL=NavajaSuiza <no-reply@acristalia.com>

# URL de acceso para los emails de bienvenida
FRONTEND_URL=http://localhost:5173

# ============================================
# TAREA 1 — Reprocesamiento Klaes XML
# ============================================
# Rutas de búsqueda secuencial del XML (orden de prioridad)
PATH_BUSQUEDA_1=/ruta/carpeta/produccion1
PATH_BUSQUEDA_2=/ruta/carpeta/produccion2
PATH_BUSQUEDA_3=/ruta/carpeta/produccion3

# Carpeta destino donde se copia el XML para importar
PATH_IMPORTACION_QR=/ruta/carpeta/importacion

# Carpeta donde el ETL genera el CSV de salida
PATH_OUTPUT_CSV=/ruta/carpeta/csv_output

# Comando ETL Klaes → Sage (ruta a .exe, .bat o script)
CMD_ETL_KLAES_SAGE=C:/Klaes/ETL/klaes_to_sage.exe

# ============================================
# Sage X3 Web Service
# ============================================
SAGE_WS_URL=http://servidor-sage:8124/soap-wsdl/syracuse/collaboration/syracuse/CAdxWebServiceXmlCC
SAGE_WS_USER=admin
SAGE_WS_PASSWORD=tu_password_sage
SAGE_POOL_ALIAS=PRODUCTION
SAGE_WS_LANGUAGE=SPA
SAGE_WS_IMPORT_TEMPLATE=KLAES

# ============================================
# Klaes SQL Server — Conexión ODBC
# ============================================
# Servidor SQL Server donde corre Klaes (IP o hostname)
KLAES_DB_SERVER=192.168.1.100
KLAES_DB_NAME=KlaesDB
KLAES_DB_USER=sa
KLAES_DB_PASSWORD=tu_password_sql_server
KLAES_DB_DRIVER=ODBC+Driver+17+for+SQL+Server
